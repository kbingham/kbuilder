define power
$(2)-on:
	$(1) $(2) on

$(2)-off:
	$(1) $(2) off

$(2)-reboot:
	$(1) $(2) reboot
endef

define target-helpers
tftp-$(1):
	rsync -Pavz --progress $$(LINUX_BUILD)/arch/arm64/boot/*Image $$(TFTP_SERVER)/$(1)/
	rsync -Pavz --progress $$(LINUX_BUILD)/arch/arm64/boot/dts/*/*.dtb $$(TFTP_SERVER)/$(1)/

$(1)-console:
	serial $(1)

$(1) run-$(1) $(1)-run: $(1)-off linux dtb tftp-$(1) $(1)-on

endef

